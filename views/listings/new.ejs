<% layout("layout/boilerplate") %>

  <body>
    <div class="row" >
      <div class="col-8 ">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation">
          <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" placeholder="Add title" type="text" class="form-control" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">enter title please</div>
          </div>

          <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter description</div>
          </div>

          <div class="mb-3">
            <lable for="image" class="form-lable">Image Link</lable>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" />
          </div>
          
          <div class="row">
            <div class="mb-3 col-md-4">
              <lable for="price" class="form-lable">Price</lable>
              <input name="listing[price]" placeholder="Ex., 1200" type="string" class="form-control" required/>
              <div class="valid-feedback">enter valid price</div>
            </div>

            <div class="mb-3 col-md-8">
              <lable for="country" class="form-lable">Country</lable>
              <input name="listing[country]" placeholder="Ex., India" type="text" class="form-control" required/>
              <div class="invalid-feedback">country name is missing</div>
            </div>
          </div>
          <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable>
            <input name="listing[location]" placeholder="Ex., Maharashtra" type="text" class="form-control" required/>
            <div class="invalid-feedback">location is required</div>
          </div>
          <button class="btn btn-dark add-btn mt-3">Add</button>
          <br><br>
        </form>
      </div>
    </div>

  </body>